{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"]
    }
  },
  "include": [
    "shared/**/*",
    "client/src/**/*",
    "server/src/**/*",
    "plugin/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
} 